<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <include layout="@layout/background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/moments2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="name"
        android:layout_above="@+id/img_user"
        android:layout_alignRight="@+id/img_user"
        android:layout_alignEnd="@+id/img_user"
        android:textSize="25sp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="75dip"
        android:layout_height="100dip"
        android:id="@+id/img_user"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/tv_account"
        android:layout_alignEnd="@+id/tv_account"
        android:layout_marginBottom="38dp"
        android:contentDescription="User's picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_account"
        android:id="@+id/tv_account"
        android:textSize="25sp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/img_user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Deconnection"
        android:id="@+id/disconnect"
        android:textSize="25sp"
        android:layout_below="@+id/tv_account"
        android:layout_alignRight="@+id/tv_account"
        android:layout_alignEnd="@+id/tv_account"
        android:textColor="#FFFFFF" />

</RelativeLayout>