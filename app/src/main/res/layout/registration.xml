<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <include layout="@layout/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/textViewLogin"
        android:textSize="34sp"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:paddingTop="@dimen/padd_top"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:editable="false"
        android:inputType="text"
        android:minWidth="300dp"
        android:minHeight="40dp"
        android:hint="@string/login"
        android:textSize="25sp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginTop="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textViewPassword"
        android:textSize="34sp"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_marginTop="@dimen/padd_top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:editable="false"
        android:inputType="textPassword"
        android:minWidth="300dp"
        android:minHeight="40dp"
        android:hint="@string/password"
        android:textSize="25sp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textViewPassword"
        android:layout_alignLeft="@+id/textViewPassword"
        android:layout_alignStart="@+id/textViewPassword"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:drawableRight="@drawable/icone_oeil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConfirmPassword"
        android:id="@+id/textViewConfirmPassword"
        android:textSize="34sp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="@dimen/padd_top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConfirmPassword"
        android:editable="false"
        android:inputType="textPassword"
        android:minWidth="300dp"
        android:minHeight="40dp"
        android:hint="@string/password"
        android:textSize="25sp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewConfirmPassword"
        android:layout_alignLeft="@+id/textViewConfirmPassword"
        android:layout_alignStart="@+id/textViewConfirmPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/icone_oeil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mail"
        android:id="@+id/textEmail"
        android:textSize="34sp"
        android:layout_below="@+id/ConfirmPassword"
        android:layout_alignLeft="@+id/ConfirmPassword"
        android:layout_alignStart="@+id/ConfirmPassword"
        android:layout_marginTop="@dimen/padd_top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:editable="false"
        android:inputType="textEmailAddress"
        android:minWidth="300dp"
        android:minHeight="40dp"
        android:hint="@string/mail"
        android:textSize="25sp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textEmail"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_ok"
        android:id="@+id/tryRegister"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/mail"
        android:layout_alignLeft="@+id/mail"
        android:layout_alignStart="@+id/mail"
        android:layout_marginTop="@dimen/padd_top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_cancel"
        android:id="@+id/butCancel"
        android:background="@drawable/rounded_button"
        android:layout_alignTop="@+id/tryRegister"
        android:layout_alignRight="@+id/mail"
        android:layout_alignEnd="@+id/mail" />
</RelativeLayout>