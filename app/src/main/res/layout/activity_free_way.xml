<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreeWay">

    <include layout="@layout/background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/moments2"/>

    <Button
        android:background="@drawable/rounded_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/stop_mode"
        android:id="@+id/btn_stopFree"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/surfaceViewCamera"
        android:layout_alignStart="@+id/surfaceViewCamera"
        android:layout_marginBottom="40dp" />

    <SurfaceView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/surfaceViewCamera"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
</RelativeLayout>
